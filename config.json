{
  "name": "urbansound8k_classification",
  "n_gpu": 1,
  "version": "1.0.0",
  "data_loader": {
    "path": "/home/richardhu/Documents/PycharmProjects/urbansound8k_classification/UrbanSound8K",
    "args": {
      "shuffle": true,
      "batch_size": 16,
      "num_workers": 4,
      "drop_last": true
    },
    "splits": {
      "train": [
        1,
        2,
        3,
        4,
        5,
        6,
        7,
        8,
        9
      ],
      "val": [
        10
      ]
    }
  },
  "transforms":{
    "type": "AudioTransforms",
    "args": 88200
  },
  "optimizer": {
    "type": "SGD",
    "args": {
      "lr": 0.02,
      "momentum": 0.9,
      "weight_decay": 0.001
    }
  },
  "loss": "cross_entropy",
  "metrics": [
        "accuracy", "top_k_acc"
    ],
  "lr_scheduler": {
    "type": "MultiStepLR",
    "args": {
      "milestones": [
        10,
        50,
        80
      ],
      "gamma": 0.1
    }
  },
  "model": "vgg16",
  "trainer": {
    "epochs": 100,
    "save_dir": "saved_cv/",
    "save_period": 1,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 10,
    "tensorboard": true
  }
}